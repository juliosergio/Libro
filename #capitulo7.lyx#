\begin_layout Plain Layout

<<binomial1, ref.label='binomial', echo=FALSE, fig.width=4, fig.height=4, fig.show='
hold', out.width='.72
\backslash

\backslash
linewidth'>>=
\end_layout

\begin_layout Plain Layout

